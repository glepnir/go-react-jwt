root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript, JSON, JSX, JavaScript Modules, TypeScript
[*.{cjs,js,json,jsx,mjs,ts,tsx}]
quote_type = single
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

#  tab indentation for go
[{go.mod,*.go}]
indent_style = tab
indent_size = 4
